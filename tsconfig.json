{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es6",
    "moduleResolution": "Node",
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "work_templates",
    "node_modules"
  ]
}

